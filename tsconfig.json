{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",                    // ← Yeh add karo: JSX support ke liye
    "esModuleInterop": true,               // ← Yeh add karo: React default import fix ke liye
    "allowSyntheticDefaultImports": true,  // Optional, lekin helpful
    "skipLibCheck": true,                  // Type errors skip karne ke liye
    "moduleResolution": "node",            // Better module resolution
    "target": "ES2020",
    "module": "ESNext"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "docusaurus.config.ts"
  ],
  "exclude": [
    ".docusaurus",
    "build",
    "node_modules"
  ]
}